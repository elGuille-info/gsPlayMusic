<!-- 
	Definición  de colores para gsPlay (gsPlayWPF) - ©Guillermo 'guille' Som 
	
	Definiciaón creada el 20/ago/2007 20:04:00 UTC/GMT
	
	El formato de cada entrada es <color name="nombre único" description="descripción">
	Después vienen las definiciones de los colores de fondo y texto
	si alguno no se indica, se usará el que esté actualmente definido.
	
	Definir solo un color por cada fichero.
	Si se indican valores decimales, usar el punto no la coma.
	
	Los valores para los fondos que se pueden definir son:
		fondoVentana                   El fondo de la ventana principal
		fondoActual                    El fondo del panel de la canción actual
		fondoListas                    El fondo de las listas almacenadas
		fondoListaActual               Para el panel de la lista actual
		fondoOpcionesListaActual       Para el panel de las opciones de la lista actual
		fondoBotonera                  Para el panel de la botonera
	Los valores del texto que se pueden definir son:
	(con el nombre se sabe a qué panel está relacionado)
		letraActual
		letraListas
		letraListaActual
		letraOpcionesListaActual
		letraBotonera
-->
<colores>
   <color name="Rojo Oscuro" description="Definición de colores con un color rojo oscuro">
      <setting name="fondoVentana" serializeAs="String">
         <value>sc#1; 0; 0; 0@0|sc#2; 0.6333333; 0; 0@1|sc#3; 0.88; 0; 0@0.7|sc#4; 0.66; 0; 0@0.8|</value>
      </setting>
      <setting name="fondoActual" serializeAs="String">
         <value>sc#1; 0; 0; 0@0|sc#2; 0.6333333; 0; 0@1|sc#3; 0.44; 0; 0@0.8|sc#4; 0.33; 0; 0@0.9|</value>
      </setting>
      <setting name="fondoListas" serializeAs="String">
         <value>sc#1; 0; 0; 0@0|sc#2; 0.6333333; 0; 0@1|</value>
      </setting>
      <setting name="fondoListaActual" serializeAs="String">
         <value>sc#1; 0; 0; 0@0|sc#2; 0.6333333; 0; 0@1|</value>
      </setting>
      <setting name="fondoOpcionesListaActual" serializeAs="String">
         <value>sc#1; 0; 0; 0@0|sc#2; 0.6333333; 0; 0@1|</value>
      </setting>
      <setting name="fondoBotonera" serializeAs="String">
         <value>sc#1; 0; 0; 0@0|sc#2; 0.6333333; 0; 0@1|</value>
      </setting>
      <setting name="letraActual" serializeAs="String">
         <value>#FFFFFFFF</value>
      </setting>
      <setting name="letraListas" serializeAs="String">
         <value>#FFFFFFFF</value>
      </setting>
      <setting name="letraListaActual" serializeAs="String">
         <value>#FFFFFFFF</value>
      </setting>
      <setting name="letraOpcionesListaActual" serializeAs="String">
         <value>#FFFFFFFF</value>
      </setting>
      <setting name="letraBotonera" serializeAs="String">
         <value>#FFFFFFFF</value>
      </setting>
   </color>
</colores>
