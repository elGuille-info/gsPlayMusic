			<value>sc#1; 0.6444797; 0.8166667; 0.7156935|sc#2; 0.6045898; 0.7333333; 0.7401119|</value>
		</setting>
		<setting name="fondoOpcionesListaActual" serializeAs="String">
			<value>sc#1; 0.5712565; 0.75; 0.6067786|sc#2; 0.6666667; 0.7333333; 0.790112|</value>
