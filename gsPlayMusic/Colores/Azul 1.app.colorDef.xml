		<setting name="fondoBotonera" serializeAs="String">
			<value>sc#1; 0.8713671; 0.8631572; 0.3515326|sc#2; 0.9559733; 0.9559733; 1|</value>
		</setting>
		<setting name="letraBotonera" serializeAs="String">
